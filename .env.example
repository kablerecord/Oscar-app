# OSQR App - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE (Required)
# ===========================================
# Supabase PostgreSQL with pgvector for embeddings
# Get this from: https://supabase.com/dashboard → Project Settings → Database → Connection string
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres"

# ===========================================
# AUTHENTICATION (Required)
# ===========================================
# Your production URL (Railway will give you this after first deploy)
NEXTAUTH_URL="https://your-app.up.railway.app"

# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-generate-with-openssl"

# ===========================================
# AI PROVIDERS (Required)
# ===========================================
# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# Anthropic - https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY="sk-ant-..."

# Google AI (Gemini) - https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY="..."

# xAI (Grok) - https://console.x.ai/
XAI_API_KEY="xai-..."

# ===========================================
# STRIPE (Required for paid tiers)
# ===========================================
# Create Payment Links in Stripe Dashboard: https://dashboard.stripe.com/payment-links
NEXT_PUBLIC_STRIPE_PRO_LINK="https://buy.stripe.com/YOUR_PRO_PAYMENT_LINK"
NEXT_PUBLIC_STRIPE_MASTER_LINK="https://buy.stripe.com/YOUR_MASTER_PAYMENT_LINK"

# ===========================================
# OPTIONAL SETTINGS
# ===========================================
# OpenAI Embedding Model (defaults to text-embedding-ada-002)
OPENAI_EMBEDDING_MODEL="text-embedding-ada-002"
